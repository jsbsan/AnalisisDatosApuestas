' Gambas class file

Public Casa As String 'nombre de la casa de apuesta

Public ListaIdapuesta As String[]
Public ListaCantidadIdApuesta As Float[]
Public suma As Float

Public Sub _new(nombre As String)

    casa = nombre
    ListaIdapuesta = New String[]
    ListaCantidadIdApuesta = New Float[]
    suma = 0

End

Public Sub agrega(id As String, cantidad As Float)

    Dim a As Integer

    For a = 0 To ListaIdapuesta.count - 1
        If ListaIdapuesta[a] = id Then
            'hay una apuesta, que tiene asociado a varias veces la misma casa
            ListacantidadIdApuesta[a] += cantidad
            Me.suma += cantidad
            Return 'salgo la subrutina
        Endif
    Next

    'Como es no aparece la id, la a√±ado

    ListaIdapuesta.Add(id)
    ListacantidadIdApuesta.Add(cantidad)
    Me.suma += cantidad

End

Public Sub Contenido() As String

    Dim a As Integer
    Dim contenido As String

    For a = 0 To ListaIdapuesta.count - 1
        contenido &= ListaIdapuesta[a] & "\t" & ListaCantidadIdApuesta[a] & "\n"

    Next
    contenido &= "--------------" "\t" & "--------------" & "\n"
    contenido &= "Total: " "\t" & Me.suma
    Return Contenido

End
