    ' casavalor = 8 ' "LUCKIA"
    ' casavalor = 9 ' "MBET"
    ' casavalor = 10 ' "PAF"
    ' casavalor = 11 ' "PASTON"
    ' casavalor = 12 ' "SPORTIUM"
    ' casavalor = 13 ' "WANABET"
    ' casavalor = 14 ' "WILLIAMHILL"

    Dim hpic As New PictureBox(HBoxCasas)
    Select Case valor
        Case 0

            hpic.h = 40
            hpic.w = 80
            hpic.Picture = Picture["iconos/bet365.png"]

        Case 2

            hpic.h = 40
            hpic.w = 80
            hpic.Picture = Picture["iconos/betstars.png"]

        Case 8
            hpic.h = 40
